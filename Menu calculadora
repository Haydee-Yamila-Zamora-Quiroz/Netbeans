package calcbasicmenu;
import java.util.*;
public class Calcbasicmenu {

    public static void main(String[] args) {
        double a, b;
        int op;
        Scanner sc=new Scanner (System.in);
        System.out.println("Coloque su primera cifra: ");
        a=sc.nextInt();
        System.out.println("Coloque su segunda cifra:");
        b=sc.nextInt();
        do
        {
        System.out.println("¿Que desea realizar?\n1.-Suma\n2.-Resta\n3.-Multiplicación\n4.-División\n5.-Modulo\n6.-Salir");
        op=sc.nextInt();
        switch (op)
                {
                    case 1:
                    System.out.println("El resultado de su suma es:" + (a+b));
                    break;
                
        
            case 2:
            System.out.println("El resultado de su resta es:" + (a-b));
                    break;
        
        
            case 3:
            System.out.println("El resultado de su multiplicación es: "+ (a*b));
               break;
            
           
            case 4:
                System.out.println("El resultado de su división es: "+ (a/b));
                break;
                
                
            case 5:
                System.out.println("El resultado de su modulo es: "+ (a%b));
                break;
                
            case 6: 
                System.exit(0);
                break;
        }
    } while (op<=5);
    
    }
}
