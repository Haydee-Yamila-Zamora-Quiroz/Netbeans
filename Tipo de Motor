package motor;
import java.util.*;
public class Motor {

    public static void main(String[] args) {
        int op;
        Scanner sc=new Scanner(System.in);
        System.out.println("Â¿Que tipo de motor es?\n1.-0\n2.-1\n3.-2\n4.-3\n5.-4");
        op=sc.nextInt();
        switch (op)
        {
            case 1:
                System.out.println("No hay establecido valor definido para el tipo de bomba");
                break;
            case 2:
                System.out.println("La bomba es una bomba de aire");
                break;
            case 3:
                System.out.println("La bomba es una bomba de gasolina");
                break;
            case 4:
                System.out.println("La bomba es una bomba de hormigon");
                break;
            case 5:
                System.out.println("La bomba es una bomba de pasta alimenticia ");
                break;
            case 6:
                System.out.println("No existe un valor valido para tipo de bomba");
                System.exit(0);
                break;
        }
    }
    
}
