package temperatura;
import java.util.*;
public class Temperatura {
    
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        double TP;
        System.out.println("¿Que temperatura tiene el día de hoy en centigrados?");
        TP=sc.nextInt();
        
    if (TP <= 10)
       {
           System.out.println("Tipo de clima: Frio \t" +TP+ "\t grados centigrados");
       }
    else if (TP >= 20 && 20 > 10)
            System.out.println("Tipo de clima: Nublado \t" +TP+ "\t grados centigrados");
    else if (20 < TP && TP<=30)
            System.out.println("Tipo de clima: caluroso \t" +TP+ "\t grados centigrados");
    else if (TP > 30)
            System.out.println("Tipo de clima: Tropical \t" +TP+ "\t grados centigrados");
    }
    
    
}
