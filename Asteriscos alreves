package asteriscosalreves;
import java.util.*;
public class Asteriscosalreves {
    
    public static void main(String[] args) {
          int dato;
          int i;
          int j;
 Scanner leer=new Scanner(System.in);
 System.out.println("nivel del triangulo");
 dato=leer.nextInt();
 for (i=dato; i>0; i--)
 { 
  for(j=1;j<i+1;j++)
  { 
  System.out.print("*");
  }
  System.out.println("\n");
 }
 
 }
}
